<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F8F6E9">

    <!--list view button-->

    <ImageButton
        android:id="@+id/prevButton3_giver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginBottom="25dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="previous page"
        android:onClick="prev3_giver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/rreturn_button" />

    <ImageButton
        android:id="@+id/nextButton3_giver"
        android:layout_width="67dp"
        android:layout_height="54dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="20dp"
        android:background="#00FFFFFF"
        android:contentDescription="save service type and hourly wage"
        android:onClick="next3_giver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/nonext_button" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/abril_fatface"
        android:text="HOURLY WAGE"
        android:textColor="#AA8D3C"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otherCh" />

    <CheckBox
        android:id="@+id/monitoringCh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:fontFamily="@font/alike_angular"
        android:text="Monitoring Health"
        android:textColor="#534741"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/physioCh" />

    <CheckBox
        android:id="@+id/mobilityCh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/alike_angular"
        android:text="Mobility Assistance"
        android:textColor="#534741"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medicationCh" />

    <CheckBox
        android:id="@+id/dailyCh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/alike_angular"
        android:text="Assistance With Daily Activities"
        android:textColor="#534741"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/companionCh" />

    <CheckBox
        android:id="@+id/otherCh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:fontFamily="@font/alike_angular"
        android:textColor="#534741"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dailyCh" />

    <CheckBox
        android:id="@+id/companionCh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:fontFamily="@font/alike_angular"
        android:text="Companionship"
        android:textColor="#534741"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mobilityCh" />

    <CheckBox
        android:id="@+id/medicationCh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:fontFamily="@font/alike_angular"
        android:text="Medication Management"
        android:textColor="#534741"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monitoringCh" />

    <ImageButton
        android:id="@+id/listviewButton_giver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="open list view"
        android:onClick="openListView"
        android:src="@drawable/list_uncheck_button"
        app:layout_constraintEnd_toStartOf="@+id/profileButton_giver"
        app:layout_constraintTop_toTopOf="parent" />

    <!--profile view button -->
    <ImageButton
        android:id="@+id/profileButton_giver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="open profile view"
        android:onClick="openProfile_giver"
        app:layout_constraintEnd_toStartOf="@+id/savinglistButton_giver"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/profile_check_button" />

    <!--Saving list view button-->
    <ImageButton
        android:id="@+id/savinglistButton_giver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="open saving list"
        android:onClick="openSaveList_giver"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/savelist_uncheck_button" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/abril_fatface"
        android:text="TYPE OF SERVICE"
        android:textColor="#AA8D3C"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listviewButton_giver" />

    <CheckBox
        android:id="@+id/physioCh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/alike_angular"
        android:text="Physio Therapy"
        android:textColor="#534741"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/otherEd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-10dp"
        android:ems="10"
        android:hint="Other Types"
        android:inputType="text"
        android:textColorHint="#AA8D3C"
        app:layout_constraintStart_toEndOf="@+id/otherCh"
        app:layout_constraintTop_toBottomOf="@+id/dailyCh" />

    <EditText
        android:id="@+id/fromWage"
        android:layout_width="115dp"
        android:layout_height="43dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#DBC991"
        android:ems="10"
        android:hint="(CAD$)"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColorHint="#AA8D3C"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <EditText
        android:id="@+id/toWage"
        android:layout_width="115dp"
        android:layout_height="43dp"
        android:layout_marginTop="130dp"
        android:backgroundTint="#DBC991"
        android:ems="10"
        android:hint="(CAD$)"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        android:textColorHint="#AA8D3C"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/dailyCh" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="95dp"
        android:fontFamily="@font/alike_angular"
        android:text="To: "
        android:textColor="#AA8D3C"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/fromWage"
        app:layout_constraintTop_toBottomOf="@+id/otherEd" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/alike_angular"
        android:text="From: "
        android:textColor="#AA8D3C"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

</androidx.constraintlayout.widget.ConstraintLayout>